@model ClassLibrary.Features.AnimalManagement.Core.Models.Visit
@using ClassLibrary.Features.AnimalManagement.Core.Enums

<form id="visitFormPartial" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <input type="hidden" asp-for="AnimalId" />
    <input type="hidden" asp-for="Id" /> @* Bruges ved redigering *@

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="PlannedDate" class="form-label"></label>
                <input asp-for="PlannedDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="PlannedDate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="PlannedDuration" class="form-label"></label>
                <input asp-for="PlannedDuration" class="form-control" type="number" />
                <span asp-validation-for="PlannedDuration" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Type" class="form-label"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Purpose" class="form-label"></label>
        <textarea asp-for="Purpose" class="form-control" rows="2"></textarea>
        <span asp-validation-for="Purpose" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Visitor" class="form-label"></label>
        <input asp-for="Visitor" class="form-control" />
        <span asp-validation-for="Visitor" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" asp-items="Html.GetEnumSelectList<VisitStatus>()" class="form-select">
            <option value="">Vælg status...</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <hr />
    <p class="text-muted">Faktisk afholdelse (udfyldes typisk ved/efter besøg):</p>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="ActualDate" class="form-label"></label>
                <input asp-for="ActualDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="ActualDate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="ActualDuration" class="form-label"></label>
                <input asp-for="ActualDuration" class="form-control" type="number" />
                <span asp-validation-for="ActualDuration" class="text-danger"></span>
            </div>
        </div>
    </div>
</form> 