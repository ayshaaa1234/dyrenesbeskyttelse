@model ClassLibrary.Features.AnimalManagement.Core.Models.Animal

@* Formular til oprettelse/redigering af dyr *@
<div class="card shadow-sm">
    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

        <div class="row g-3">
            @* Grundlæggende information *@
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" placeholder="Navn" />
                    <label asp-for="Name">Navn</label>
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <select asp-for="Species" class="form-select" asp-items="@(ViewData["SpeciesList"] as SelectList)">
                        <option value="">Vælg Art</option>
                    </select>
                    <label asp-for="Species">Art</label>
                    <span asp-validation-for="Species" class="text-danger small"></span>
                </div>
            </div>

            @* Fysiske karakteristika *@
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input asp-for="Breed" class="form-control" placeholder="Race" />
                    <label asp-for="Breed">Race</label>
                    <span asp-validation-for="Breed" class="text-danger small"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input asp-for="BirthDate" type="date" class="form-control" placeholder="Fødselsdato" />
                    <label asp-for="BirthDate">Fødselsdato</label>
                    <span asp-validation-for="BirthDate" class="text-danger small"></span>
                </div>
            </div>

            @* Køn og indtagelse *@
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <select asp-for="Gender" class="form-select" asp-items="@(ViewData["GenderList"] as SelectList)">
                        <option value="">Vælg Køn</option>
                    </select>
                    <label asp-for="Gender">Køn</label>
                    <span asp-validation-for="Gender" class="text-danger small"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input asp-for="IntakeDate" type="datetime-local" class="form-control" placeholder="Indtagelsesdato" />
                    <label asp-for="IntakeDate">Indtagelsesdato</label>
                    <span asp-validation-for="IntakeDate" class="text-danger small"></span>
                </div>
            </div>

            @* Sundhed og status *@
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input asp-for="Weight" type="number" step="0.01" class="form-control" placeholder="Vægt" />
                    <label asp-for="Weight">Vægt (kg)</label>
                    <span asp-validation-for="Weight" class="text-danger small"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input asp-for="HealthStatus" class="form-control" placeholder="Sundhedsstatus" />
                    <label asp-for="HealthStatus">Sundhedsstatus</label>
                    <span asp-validation-for="HealthStatus" class="text-danger small"></span>
                </div>
            </div>

            @* Status og billede *@
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <select asp-for="Status" class="form-select" asp-items="@(ViewData["StatusList"] as SelectList)">
                        <option value="">Vælg Status</option>
                    </select>
                    <label asp-for="Status">Status</label>
                    <span asp-validation-for="Status" class="text-danger small"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating mb-3">
                    <input asp-for="PictureUrl" class="form-control" placeholder="Billede URL" />
                    <label asp-for="PictureUrl">Billede URL</label>
                    <span asp-validation-for="PictureUrl" class="text-danger small"></span>
                </div>
            </div>

            @* Beskrivelse *@
            <div class="col-12">
                <div class="form-floating mb-3">
                    <textarea asp-for="Description" class="form-control" placeholder="Beskrivelse" style="height: 100px"></textarea>
                    <label asp-for="Description">Beskrivelse</label>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>
            </div>
        </div>
    </div>
</div>

@* Inkluder fælles CSS *@
<link rel="stylesheet" href="~/css/admin/forms.css" /> 