@model ClassLibrary.Features.AnimalManagement.Core.Models.Animal

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="form-group mb-2">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group mb-2">
    <label asp-for="Species" class="control-label"></label>
    <select asp-for="Species" class="form-control" asp-items="@(ViewData["SpeciesList"] as SelectList)">
        <option value="">-- Vælg Art --</option>
    </select>
    <span asp-validation-for="Species" class="text-danger"></span>
</div>

<div class="form-group mb-2">
    <label asp-for="Breed" class="control-label"></label>
    <input asp-for="Breed" class="form-control" />
    <span asp-validation-for="Breed" class="text-danger"></span>
</div>

<div class="form-group mb-2">
    <label asp-for="BirthDate" class="control-label"></label>
    <input asp-for="BirthDate" type="date" class="form-control" />
    <span asp-validation-for="BirthDate" class="text-danger"></span>
</div>

<div class="form-group mb-2">
    <label asp-for="Gender" class="control-label"></label>
    <select asp-for="Gender" class="form-control" asp-items="@(ViewData["GenderList"] as SelectList)">
        <option value="">-- Vælg Køn --</option>
    </select>
    <span asp-validation-for="Gender" class="text-danger"></span>
</div>

<div class="form-group mb-2">
    <label asp-for="Description" class="control-label"></label>
    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-group mb-2">
    <label asp-for="IntakeDate" class="control-label"></label>
    <input asp-for="IntakeDate" type="datetime-local" class="form-control" />
    <span asp-validation-for="IntakeDate" class="text-danger"></span>
</div>

<div class="form-group mb-2">
    <label asp-for="Weight" class="control-label"></label>
    <input asp-for="Weight" type="number" step="0.01" class="form-control" />
    <span asp-validation-for="Weight" class="text-danger"></span>
</div>

<div class="form-group mb-2">
    <label asp-for="HealthStatus" class="control-label"></label>
    <input asp-for="HealthStatus" class="form-control" />
    <span asp-validation-for="HealthStatus" class="text-danger"></span>
</div>

<div class="form-group mb-2">
    <label asp-for="Status" class="control-label"></label>
    <select asp-for="Status" class="form-control" asp-items="@(ViewData["StatusList"] as SelectList)">
        <option value="">-- Vælg Status --</option>
    </select>
    <span asp-validation-for="Status" class="text-danger"></span>
</div>

<div class="form-group mb-2">
    <label asp-for="PictureUrl" class="control-label"></label>
    <input asp-for="PictureUrl" class="form-control" />
    <span asp-validation-for="PictureUrl" class="text-danger"></span>
</div> 