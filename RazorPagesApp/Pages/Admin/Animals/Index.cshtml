@page "/admin/animals"
@model RazorPagesApp.Pages.Admin.Animals.IndexModel
@using ClassLibrary.Features.AnimalManagement.Core.Enums
@using ClassLibrary.SharedKernel.Extensions

@{   ViewData["Title"] = "Administrer dyr";
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-success" role="alert">
        @Model.Message
    </div>
}

<p>
    <a asp-page="Create" class="btn btn-primary">Opret ny dyr</a>
</p>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" asp-for="SearchTerm" class="form-control" placeholder="Søg efter navn..." />
        <button type="submit" class="btn btn-outline-secondary">Søg</button>
        @if(!string.IsNullOrWhiteSpace(Model.SearchTerm))
        {
            <a asp-page="Index" class="btn btn-outline-info">Nulstil søgning</a>
        }
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Animals[0].Id)</th>
            <th>@Html.DisplayNameFor(model => model.Animals[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Animals[0].Species)</th>
            <th>@Html.DisplayNameFor(model => model.Animals[0].Breed)</th>
            <th>@Html.DisplayNameFor(model => model.Animals[0].Status)</th>
            <th>Handlinger</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Animals == null || !Model.Animals.Any())
        {
            <tr>
                <td colspan="6" class="text-center">Ingen dyr fundet.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model.Animals)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Species)</td>
                    <td>@Html.DisplayFor(modelItem => item.Breed)</td>
                    <td>@item.Status.GetDisplayName()</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Rediger</a> 
                        <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detaljer</a> 
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Slet</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@section Scripts {
    <script>
        // Lidt JS for at fjerne alert efter et par sekunder, hvis der er en TempData besked
        var alert = document.querySelector('.alert-success');
        if (alert) {
            setTimeout(function() {
                alert.style.display = 'none';
            }, 5000); // 5 sekunder
        }
    </script>
} 