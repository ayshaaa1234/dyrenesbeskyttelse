@page "/admin/animals/create"
@model RazorPagesApp.Pages.Admin.Animals.CreateModel

@{   ViewData["Title"] = "Opret nyt dyr";
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h4>Dyreinformation</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-2">
                <label asp-for="Animal.Name" class="control-label"></label>
                <input asp-for="Animal.Name" class="form-control" />
                <span asp-validation-for="Animal.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Animal.Species" class="control-label"></label>
                <select asp-for="Animal.Species" class="form-control" asp-items="Model.SpeciesList">
                    <option value="">-- Vælg Art --</option>
                </select>
                <span asp-validation-for="Animal.Species" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Animal.Breed" class="control-label"></label>
                <input asp-for="Animal.Breed" class="form-control" />
                <span asp-validation-for="Animal.Breed" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Animal.BirthDate" class="control-label"></label>
                <input asp-for="Animal.BirthDate" type="date" class="form-control" />
                <span asp-validation-for="Animal.BirthDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Animal.Gender" class="control-label"></label>
                <select asp-for="Animal.Gender" class="form-control" asp-items="Model.GenderList">
                    <option value="">-- Vælg Køn --</option>
                </select>
                <span asp-validation-for="Animal.Gender" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Animal.Description" class="control-label"></label>
                <textarea asp-for="Animal.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Animal.Description" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-2">
                <label asp-for="Animal.IntakeDate" class="control-label"></label>
                <input asp-for="Animal.IntakeDate" type="date" class="form-control" />
                <span asp-validation-for="Animal.IntakeDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Animal.Weight" class="control-label"></label>
                <input asp-for="Animal.Weight" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Animal.Weight" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Animal.HealthStatus" class="control-label"></label>
                <input asp-for="Animal.HealthStatus" class="form-control" />
                <span asp-validation-for="Animal.HealthStatus" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-2">
                <label asp-for="Animal.Status" class="control-label"></label>
                <select asp-for="Animal.Status" class="form-control" asp-items="Model.StatusList">
                    <option value="">-- Vælg Status --</option>
                </select>
                <span asp-validation-for="Animal.Status" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Animal.PictureUrl" class="control-label"></label>
                <input asp-for="Animal.PictureUrl" class="form-control" />
                <span asp-validation-for="Animal.PictureUrl" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Opret Dyr" class="btn btn-success" />
                <a asp-page="Index" class="btn btn-outline-secondary">Tilbage til listen</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 