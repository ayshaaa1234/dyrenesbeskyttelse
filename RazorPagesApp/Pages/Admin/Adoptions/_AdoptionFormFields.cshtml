@model ClassLibrary.Features.Adoptions.Core.Models.Adoption
@* @using ClassLibrary.Features.Adoptions.Core.Enums - Hvis enums skal bruges direkte her *@

@* Denne partial view indeholder formularfelterne til oprettelse eller redigering af en adoption. *@
<form id="adoptionFormPartial" method="post">
    @* Viser en opsummering af valideringsfejl for hele modellen. *@
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    @* Skjult felt for adoptionens ID. Nødvendigt ved redigering. *@
    <input type="hidden" asp-for="Id" />
    @* Skjulte felter for data, der ikke direkte redigeres i denne form, men som skal sendes med tilbage for at bevare dataintegritet.
       AnimalId og CustomerId bør ikke ændres her, da de typisk er faste efter oprettelse.
       Status, ApprovalDate, RejectionDate, CompletionDate håndteres typisk af separate handlinger/processer og ikke direkte i denne generelle redigeringsform. *@
    <input type="hidden" asp-for="AnimalId" />
    <input type="hidden" asp-for="CustomerId" />
    <input type="hidden" asp-for="Status" />
    <input type="hidden" asp-for="ApprovalDate" /> 
    <input type="hidden" asp-for="RejectionDate" /> 
    <input type="hidden" asp-for="CompletionDate" /> 

    <div class="row">
        <div class="col-md-6 mb-3">
            @* Label og inputfelt for ansøgningsdato. *@
            <label asp-for="ApplicationDate" class="form-label"></label>
            <input asp-for="ApplicationDate" class="form-control" type="datetime-local" />
            @* Viser valideringsfejl specifikt for ApplicationDate. *@
            <span asp-validation-for="ApplicationDate" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            @* Label og inputfelt for adoptionsdato. *@
            <label asp-for="AdoptionDate" class="form-label"></label>
            <input asp-for="AdoptionDate" class="form-control" type="datetime-local" />
            @* Viser valideringsfejl specifikt for AdoptionDate. *@
            <span asp-validation-for="AdoptionDate" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        @* Label og inputfelt for adoptionstype. *@
        <label asp-for="AdoptionType" class="form-label"></label>
        <input asp-for="AdoptionType" class="form-control" />
        @* Viser valideringsfejl specifikt for AdoptionType. *@
        <span asp-validation-for="AdoptionType" class="text-danger"></span>
    </div>

    <div class="mb-3">
        @* Label og dropdown-liste for valg af tildelt medarbejder. *@
        <label asp-for="EmployeeId" class="form-label">Tildelt medarbejder</label>
        @* Dropdown-listen (select) bindes til EmployeeId.
           Elementerne i listen (asp-items) kommer fra ViewData["EmployeeList"], som forventes at være en SelectList.
           Null-forgiving operator (!) bruges, da vi forventer, at ViewData["EmployeeList"] altid er sat. *@
        <select asp-for="EmployeeId" class="form-select" asp-items="@((SelectList)ViewData["EmployeeList"]!)">
            @* Standardvalg i dropdown-listen. *@
            <option value="">-- Vælg medarbejder --</option>
        </select>
        @* Viser valideringsfejl specifikt for EmployeeId. *@
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        @* Label og tekstområde (textarea) for noter. *@
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" class="form-control" rows="4"></textarea>
        @* Viser valideringsfejl specifikt for Notes. *@
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>
</form> 